{% if app.user is not null %}
    {% set wordCount = user_service.getUserwordCountToday() %}

    <div class="row">
        <div class="col-md-12">
            <div class="row {{ (wordCount < 130) ? 'bg-danger' : 'bg-success'}}">
                <div class="col-md-12">
                    <div class="pull-left">
                        <h2 style="margin: 20px 15px;">{{ "now"|date('l, F jS') }}</h2>
                    </div>
                    <div class="pull-right">
                        {% if wordCount < 130 %}
                            <span class="text-danger" style="display: inline-block">-{{ 130 - wordCount }}</span>
                        {% endif %}
                        <h2 title="words saved today" style="display: inline-block; margin: 20px 15px;">{{ wordCount }}</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endif %}
