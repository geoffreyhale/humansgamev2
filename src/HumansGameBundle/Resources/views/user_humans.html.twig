{% if app.user.humans is empty %}
    {% include 'HumansGameBundle:instructions:pre_humans.html.twig' %}
    {% if form is defined %}
        <div id="human-create" class="panel panel-default">
            <div class="panel-heading">Human</div>
            <div class="panel-body">
                {{ form_start(form, {'attr': {'class': 'form'}}) }}
                <div class="form-group">
                    {{ form_label(form.name) }}
                    {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.submit, {'attr': {'class': 'btn btn-primary'}}) }}
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    {% endif %}
{% else %}
    <ul class="nav">
        {% for human in app.user.humans %}
            <li><a class="btn btn-default">{{ human.name }}</a></li>
        {% endfor %}
    </ul>
{% endif %}